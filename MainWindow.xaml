<Window x:Class="WPFSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Snake" Height="500" Width="500">
    <Grid>
        <Canvas Name="GameCanvas" Background="LightGray">
            <!-- Obstacles and other elements will be added programmatically -->
        </Canvas>

        <TextBlock Name="ScoreText" FontSize="16" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Text="Score: 0"/>

        <TextBlock Name="GameOverText" FontSize="24" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Game Over" Visibility="Hidden"/>
    </Grid>
</Window>
